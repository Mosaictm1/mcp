{
  "name": "n8n-autopilot",
  "version": "0.1.0",
  "private": true,
  "description": "MCP-based SaaS for automated n8n workflow creation and execution",
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "build": "pnpm --parallel -r run build",
    "lint": "pnpm --parallel -r run lint",
    "test": "pnpm --parallel -r run test",
    "test:unit": "pnpm --filter backend run test:unit",
    "test:integration": "pnpm --filter backend run test:integration",
    "test:e2e": "pnpm --filter frontend run test:e2e",
    "db:generate": "pnpm --filter backend run db:generate",
    "db:push": "pnpm --filter backend run db:push",
    "db:migrate": "pnpm --filter backend run db:migrate"
  },
  "keywords": ["mcp", "n8n", "automation", "ai", "workflow"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
